# OpenAI API設定
OPENAI_API_KEY=your-openai-api-key
USE_LLM=1
LLM_MODEL=gpt-4o-mini

# Supabase設定（フロントエンド用）
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Supabase設定（バックエンド用）
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
# IMPORTANT: Supabase Dashboard > Settings > API > JWT Settings から取得してください
SUPABASE_JWT_SECRET=your-jwt-secret-from-supabase-dashboard

# データ暗号化設定
# 生成コマンド: python -c "import secrets; print(secrets.token_urlsafe(32))"
ENCRYPTION_KEY=your-32-byte-encryption-key

# 認証設定
# 開発時は1、本番環境では0に設定（JWT検証の有効化）
DISABLE_AUTH=1

# CORS設定（本番環境のドメインをカンマ区切りで追加）
# 例: ALLOWED_ORIGINS=https://your-app.vercel.app,https://your-custom-domain.com
ALLOWED_ORIGINS=
